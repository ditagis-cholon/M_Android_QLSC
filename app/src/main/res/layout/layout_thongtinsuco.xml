<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/padding_title_popup">

        <TextView
            android:id="@+id/txt_thongtin_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgBtn_layout_thongtinsuco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:color/white"
            android:contentDescription="Đóng popup"
            android:src="@drawable/ic_cancel"
            tools:ignore="RtlSymmetry" />
    </FrameLayout>

    <ListView
        android:id="@+id/lstview_thongtinsuco"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_thongtinsuco_prev"
                style="@style/MyTextAppearance.Blue.Big.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRƯỚC" />

            <TextView
                android:id="@+id/txt_thongtinsuco_number"
                style="@style/MyTextAppearance.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:text="1 trên tổng số 20" />

            <TextView
                android:id="@+id/txt_thongtinsuco_next"
                style="@style/MyTextAppearance.Blue.Big.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAU" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgBtn_ViewMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@android:color/white"
            android:contentDescription="Xem thông tin chi tiết"
            android:paddingEnd="@dimen/padding_title_popup"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_info"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/imgBtn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:contentDescription="Xóa"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />
    </FrameLayout>

</LinearLayout>