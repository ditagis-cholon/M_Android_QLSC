<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llayout_attachment_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginTop="20dip"
            android:indeterminate="true"
            android:maxHeight="24dip"

            android:minHeight="24dip" />

        <TextView
            android:id="@+id/txt_attachment_progress"
            style="@style/MyTextAppearance.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Đang tải tệp đính kèm..." />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_attachment_message"
        style="@style/MyTextAppearance.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Không có tệp đính kèm"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lstView_alertdialog_attachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </ListView>


</FrameLayout>